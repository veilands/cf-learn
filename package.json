{
  "name": "cloudflare-auth-api",
  "version": "1.0.0",
  "description": "Authentication API built with Cloudflare Workers and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy src/index.ts",
    "test": "npm run deploy && vitest run --coverage --coverage.thresholds.branches=80 --coverage.thresholds.functions=80 --coverage.thresholds.lines=80 --coverage.thresholds.statements=80",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "version:increment": "node scripts/increment-version.js"
  },
  "author": "Toms Veilands",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.1",
    "msw": "^2.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8",
    "wrangler": "^3.22.1"
  },
  "dependencies": {
    "@tsndr/cloudflare-worker-jwt": "^2.3.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4"
  }
}
