name = "simple-backend"
main = "src/index.ts"
compatibility_date = "2023-12-18"

# Route configuration
routes = [
  { pattern = "api.pasts.dev/*", custom_domain = true }
]

# KV Namespaces - Replace with your namespace IDs
kv_namespaces = [
  { binding = "API_KEYS", id = "your-api-keys-namespace-id" },
  { binding = "METRICS", id = "your-metrics-namespace-id" }
]

# Environment variables - Replace with your values
[vars]
INFLUXDB_URL = "your-influxdb-url"
INFLUXDB_ORG = "your-org"
INFLUXDB_BUCKET = "your-bucket"

# Note: Sensitive values like INFLUXDB_TOKEN should be set using:
# npx wrangler secret put INFLUXDB_TOKEN
